{
  "manifest_version": 3,
  "name": "Primus (prev. PADO)",
  "description": "Use MPC-TLS to enable trusted and verifiable data flows from Web2 to Web3.",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "offscreen",
    "webRequest",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "iconExtension.svg",
        "iconSuc.svg",
        "iconPado.svg",
        "iconSucc.svg",
        "iconFail.svg",
        "iconLink.svg",
        "iconDataSourceBinance.svg",
        "iconDataSourceCoinbase.png",
        "iconDataSourceOKX.svg",
        "iconDataSourceX.svg",
        "iconDataSourceTikTok.svg",
        "iconDataSourceBitget.svg",
        "iconDataSourceGate.svg",
        "iconDataSourceMEXC.png",
        "iconDataSourceHuobi.svg",
        "iconDataSourceChatgpt.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://padolabs.org/*",
        "https://www.padolabs.org/*",
        "https://events.padolabs.org/*",
        "http://api-dev.padolabs.org:9094/*",
        "http://api-dev.padolabs.org:8081/*",
        "https://primuslabs.xyz/*"
      ],
      "js": ["padoWebsite.js"]
    },
    {
      "matches": [
        "https://twitter.com/intent/follow?screen_name=padolabs",
        "https://x.com/intent/follow?screen_name=padolabs"
      ],
      "js": ["xFollow.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["padoZKAttestationJSSDK.bundle.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["primus.js"],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ]
}
