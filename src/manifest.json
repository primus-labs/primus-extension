{
  "manifest_version": 3,
  "name": "PADO",
  "description": "PADO Browser Extension",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "offscreen",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "https://api.padolabs.org/",
    "https://www.okx.com/",
    "https://api.binance.com/",
    "https://api.kucoin.com/",
    "https://api.coinbase.com/",
    "https://api.huobi.pro/",
    "https://api.hbdm.com/",
    "https://api.bitget.com/",
    "https://api.bybit.com/",
    "https://api.mexc.com/",
    "https://contract.mexc.com/",
    "https://api.gateio.ws/",
    "https://pado-online.s3.ap-northeast-1.amazonaws.com/",
    "https://www.binance.com/"
  ],
  "web_accessible_resources": [
    {
      "resources": ["iconExtension.svg","iconSuc.svg"],
      "matches": ["https://www.binance.com/*"]
    }
  ]
}
